{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false
  }
}
